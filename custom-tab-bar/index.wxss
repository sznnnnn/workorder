.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.tab-icon {
  font-size: 40rpx;
  line-height: 1;
}

.tab-text {
  font-size: 24rpx;
  line-height: 1;
}

/* 自定义 tabBar 样式 */
.van-tabbar {
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.van-tabbar-item {
  padding: 12rpx 0 8rpx;
}

.van-tabbar-item--active {
  font-weight: 500;
} 